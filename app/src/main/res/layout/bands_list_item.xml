<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/band_image_width_height"
    android:layout_margin="@dimen/band_list_item_margin"
    android:padding="@dimen/band_list_item_padding">

    <ImageView
        android:id="@+id/image_band"
        android:layout_width="@dimen/band_image_width_height"
        android:layout_height="@dimen/band_image_width_height"
        android:scaleType="fitXY"
        android:src="@drawable/cayman_island_small" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/image_band"
        android:background="@color/black">

        <TextView
            android:id="@+id/title_band"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/band_list_item_title_margin_left"
            android:layout_marginTop="@dimen/band_list_item_title_margin_top"
            android:text="Miami-Broward One"
            android:textColor="@color/white"
            android:textSize="@dimen/band_list_item_title_text_size"
            android:textStyle="bold" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/band_list_item_view_height"
            android:layout_below="@id/title_band"
            android:layout_marginBottom="@dimen/band_list_item_view_margin_bottom"
            android:layout_marginLeft="@dimen/band_list_item_view_margin_left"
            android:layout_marginRight="@dimen/band_list_item_view_margin_right"
            android:layout_marginTop="@dimen/band_list_item_view_margin_top"
            android:background="@color/white" />

        <TextView
            android:id="@+id/sub_title_band"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view"
            android:layout_marginLeft="@dimen/band_list_item_title_margin_left"
            android:text="Apple Inc., Cupertino"
            android:textColor="@color/white"
            android:textSize="@dimen/band_list_item_sub_title_text_size" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/band_list_item_bottom_layout_margin_bottom"
        android:layout_marginLeft="@dimen/band_list_item_bottom_layout_margin_left"
        android:layout_toRightOf="@id/image_band"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time_band"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="00:53:40 ago"
            android:textColor="@color/white"
            android:textSize="@dimen/band_list_item_time_text_size" />

        <TextView
            android:id="@+id/updates_band"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4 UPDATES"
            android:textColor="@color/white"
            android:textSize="@dimen/band_list_item_time_text_size" />
    </LinearLayout>


</RelativeLayout>